<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2E7D32">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/countdown_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="16dp"
            android:paddingTop="8dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="1:00"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="32sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/total_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="16dp"
                android:paddingTop="8dp"
                android:paddingRight="8dp"
                android:textStyle="bold"
                android:text="0"
                android:textAllCaps="true"
                android:textColor="#8BC34A"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/slash_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="16dp"
                android:paddingTop="8dp"
                android:paddingRight="8dp"

                android:text="/"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/total_wrong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="16dp"
                android:paddingTop="8dp"
                android:paddingRight="8dp"
                android:textStyle="bold"
                android:text="0"
                android:textAllCaps="true"
                android:textColor="#C62828"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/slash_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="16dp"
                android:paddingTop="8dp"
                android:paddingRight="8dp"
                android:text="/"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/total_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="16dp"
                android:paddingTop="8dp"
                android:paddingRight="8dp"
                android:textStyle="bold"
                android:text="0"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="16sp" />

        </LinearLayout>

    </RelativeLayout>


    <TextView
        android:id="@+id/top_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-light"
        android:paddingBottom="16dp"
        android:paddingTop="8dp"
        android:text="0"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="56sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/math_operation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/bottom_number"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="16dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:text="+"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="56sp" />

        <TextView
            android:id="@+id/bottom_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="16dp"
            android:paddingTop="8dp"
            android:text="0"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="56sp" />

    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="128dp"
        android:layout_marginRight="152dp"
        android:background="#fFFFFF">

    </View>



    <TextView
        android:id="@+id/unknown_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-light"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="?"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="56sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="32dp">

        <Button
            android:id="@+id/top_plus_zero"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="topPlusZero"
            android:paddingBottom="8dp"
            android:text="5" />


        <Button
            android:id="@+id/top_plus_one"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="topPlusOne"
            android:paddingBottom="8dp"
            android:text="6" />

        <Button
            android:id="@+id/top_plus_two"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="topPlusTwo"
            android:paddingBottom="8dp"
            android:text="7" />

        <Button
            android:id="@+id/top_plus_three"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="topPlusThree"
            android:paddingBottom="8dp"
            android:text="8" />

        <Button
            android:id="@+id/top_plus_four"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="topPlusFour"
            android:paddingBottom="8dp"
            android:text="9" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/top_plus_five"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="topPlusFive"
            android:paddingBottom="8dp"
            android:text="10" />

        <Button
            android:id="@+id/top_plus_six"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="topPlusSix"
            android:paddingBottom="8dp"
            android:text="11" />

        <Button
            android:id="@+id/top_plus_seven"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="topPlusSeven"
            android:paddingBottom="8dp"
            android:text="12" />

        <Button
            android:id="@+id/top_plus_eight"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="topPlusEight"
            android:paddingBottom="8dp"
            android:text="13" />

        <Button
            android:id="@+id/top_plus_nine"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="topPlusNine"
            android:paddingBottom="8dp"
            android:text="14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/correct_or_not"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="Your Answer?"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_start"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingBottom="8dp"
            android:onClick="startFlashing"
            android:text="Start" />

    </LinearLayout>



</LinearLayout>



